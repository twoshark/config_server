interface InterfaceFixture {
  id: ID!
  name: String
  description: String
  installations: [ID]
  opacity: Int
}

input NewFixture {
  name: String
  description: String
  installations: [ID]
  type: String
}

type Basic implements InterfaceFixture {
  id: ID!
  name: String
  description: String
  installations: [ID]
  opacity: Int!
  animation: Int!
  option: Int!
  speed: Int!
  strobe: Int!
}

input UpdateBasic {
  id: ID!
  name: String
  description: String
  installations: [ID]
  opacity: Int
  animation: Int
  option: Int
  speed: Int
  strobe: Int
}

type Spotlight implements InterfaceFixture {
  id: ID!
  name: String
  description: String
  installations: [ID]
  opacity: Int
}

input UpdateSpotlight {
  id: ID!
  name: String
  description: String
  installations: [ID]
  opacity: Int
}


union Fixture = Basic | Spotlight

extend type Query {
  fixture(id:ID!): Fixture
}

extend type Mutation {
  createFixture(input: NewFixture!): Fixture!
  
  updateBasic(input: UpdateBasic!):  Basic
  updateSpotlight(input: UpdateSpotlight!): Spotlight
}